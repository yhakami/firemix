{
  "name": "firemix",
  "version": "0.1.0",
  "description": "Firebase App Hosting adapter for Remix",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "firemix": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run"
  },
  "keywords": [
    "remix",
    "firebase",
    "app-hosting",
    "adapter",
    "deployment"
  ],
  "author": "Yazeed M.A. Hakami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yhakami/firemix.git"
  },
  "peerDependencies": {
    "@remix-run/node": ">=2.0.0",
    "vite": ">=7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
