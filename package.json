{
  "name": "firemix",
  "version": "0.1.1",
  "description": "Firebase App Hosting adapter for Remix",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "firemix": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "import": "./dist/vite.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true});\"",
    "build": "npm run clean && tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx}'"
  },
  "keywords": [
    "remix",
    "firebase",
    "app-hosting",
    "adapter",
    "deployment"
  ],
  "author": "Yazeed M.A. Hakami",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yhakami/firemix.git"
  },
  "bugs": {
    "url": "https://github.com/yhakami/firemix/issues"
  },
  "homepage": "https://github.com/yhakami/firemix#readme",
  "peerDependencies": {
    "@remix-run/node": ">=2.0.0",
    "vite": ">=7.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
